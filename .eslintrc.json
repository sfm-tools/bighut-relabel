{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "import",
    "simple-import-sort",
    "sort-exports"
  ],
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "sort-imports": "off",
    "import/order": "off",
    "simple-import-sort/sort": "error",
    "sort-exports/sort-exports": [
      "error",
      {
        "sortDir": "asc"
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-multi-spaces": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-mixed-spaces-and-tabs": "error",
    "no-return-await": "error",
    "require-await":  "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0
      }
    ]
  }
}
